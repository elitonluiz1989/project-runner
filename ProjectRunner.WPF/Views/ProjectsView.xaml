<UserControl x:Class="ProjectRunner.WPF.Views.ProjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectRunner.WPF.Views"
             xmlns:viewmodels="clr-namespace:ProjectRunner.WPF.ViewModels"
             xmlns:components="clr-namespace:ProjectRunner.WPF.Components"
             d:DataContext="{d:DesignInstance Type=viewmodels:ProjectsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600"
             d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <components:RecordsToolBar Grid.Row="0" DataContext="{Binding}" />

        <components:RecordsList Grid.Row="1" DataContext="{Binding}" />
    </Grid>
</UserControl>
