<Window x:Class="ProjectRunner.WPF.Views.Forms.ExecutableForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectRunner.WPF.Views.Forms"
        xmlns:components="clr-namespace:ProjectRunner.WPF.Views.Components"
        mc:Ignorable="d"
        Name="ExecutableFormCompoment"
        Title="Executable"
        Style="{StaticResource FormDefault}"
        Width="450"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <components:FormField
            x:Name="FfName"
            Grid.Row="0"
            Label="Name"
            Type="Text" />

        <components:FormField
            x:Name="FfFileName"
            Grid.Row="1"
            Label="File"
            Type="File" />

        <components:FormControls
            x:Name="FormControlsComponent"
            Grid.Row="2" />
    </Grid>
</Window>
