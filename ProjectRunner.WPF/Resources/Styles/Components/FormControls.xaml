<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>

    <Style x:Key="FormControlBtn"  TargetType="Button" BasedOn="{StaticResource BtnDefault}">
        <Setter Property="Width" Value="100" />
        <Setter Property="Margin" Value="10 5" />
    </Style>

    <Style x:Key="FormControlCancel" TargetType="Button" BasedOn="{StaticResource FormControlBtn}">
        <Setter Property="Background" Value="White" />
    </Style>

    <Style x:Key="FormControlSave" TargetType="Button" BasedOn="{StaticResource FormControlBtn}">
        <Setter Property="Background" Value="#24ad7b" />
        <Setter Property="BorderBrush" Value="#0e4d36" />
        <Setter Property="Foreground" Value="#0e4d36" />
    </Style>
</ResourceDictionary>